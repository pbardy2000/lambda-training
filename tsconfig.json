{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2019",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
  },
  "include": [
    "./src/**/*",
    "./spec/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
